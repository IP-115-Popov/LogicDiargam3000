<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:LogicDiagram3000.Views.logicScheme">
  <Design.PreviewWith>
    <controls:IndicatorChipView />
  </Design.PreviewWith>

  <Style Selector="controls|IndicatorChipView">
    <Setter Property="Template">
      <ControlTemplate>
		  <Canvas Height="110" Width="110" Background="Transparent">
			  <Rectangle Height="100" Width="100" Margin="5,5" Stroke="Black" StrokeThickness="2"/>
			  <Ellipse Width="15" Height="15" Margin="-2,50" Fill="DarkGreen" StrokeThickness="3" Name="In1"/>
			  <Panel Margin="47,50">
				  <TextBlock Text="{TemplateBinding IndicatorChesk}"/>
			  </Panel>
		  </Canvas>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
