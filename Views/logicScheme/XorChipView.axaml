<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:LogicDiagram3000.Views.logicScheme">
  <Design.PreviewWith>
    <controls:XorChipView />
  </Design.PreviewWith>

  <Style Selector="controls|XorChipView">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
		  <Canvas Height="110" Width="160" Background="Transparent">
			  <Path Data="M 5,5 105,5 c 0,0 50,0 50,50 c 0,0 0,50 -50,50 l 0,0 -100,0 c 0,0 40,-50 0,-100 Z" Fill="White" StrokeThickness="2" Stroke="Black"/>
			  <Path Data="M 15,5 c 0,0 50,40 0,100" StrokeThickness="2" Stroke="Black"/>
			  <Ellipse Width="15" Height="15" Margin="10,25" Fill="DarkGreen" StrokeThickness="3" Classes="In"/>
			  <Ellipse Width="15" Height="15" Margin="147,50" Fill="DarkGreen" StrokeThickness="3" Classes="Out"/>
			  <Ellipse Width="15" Height="15" Margin="10,70" Fill="DarkGreen" StrokeThickness="3" Classes="In"/>
		  </Canvas>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
