<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:LogicDiagram3000.Views">
  <Design.PreviewWith>
    <controls:SchameView CastomText="Hello"/>
  </Design.PreviewWith>

  <Style Selector="controls|SchameView">
    <Setter Property="Template">
      <ControlTemplate>
		  <Canvas Height="110" Width="110" Background="Transparent">
			  <Rectangle Height="100" Width="100" Margin="5,5" Stroke="Black" StrokeThickness="2"/>
			  <Ellipse Width="15" Height="15" Margin="-2,25" Fill="DarkGreen" StrokeThickness="3" Name="In1"/>
			  <Ellipse Width="15" Height="15" Margin="-2,70" Fill="DarkGreen" StrokeThickness="3" Name="In2"/>
			  <Ellipse Width="15" Height="15" Margin="97,50" Fill="DarkGreen" StrokeThickness="3" Name="Out1"/>
			  <TextBlock Margin="15,45" Text="{TemplateBinding CastomText}"/>
		  </Canvas>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
